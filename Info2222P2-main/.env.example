# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="your_jwt_secret_should_be_longer_and_more_complex_in_production"
JWT_EXPIRES_IN="1d"
NEXTAUTH_SECRET="your_nextauth_secret_should_be_longer_and_more_complex_in_production"
NEXTAUTH_URL="http://localhost:3000"

# Encryption keys
# In production, these would be stored in a secure vault or HSM
AES_SECRET_KEY="your_aes_secret_key_should_be_32_bytes_for_aes256"
RSA_PRIVATE_KEY_PATH="./keys/private.pem"
RSA_PUBLIC_KEY_PATH="./keys/public.pem"

# Email settings for verification & password reset
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="user@example.com"
EMAIL_SERVER_PASSWORD="your_email_password"
EMAIL_FROM="noreply@example.com"

# Security settings
SECURE_COOKIE=false # Set to true in production
COOKIE_MAX_AGE=86400 # 1 day in seconds
TLS_ENABLED=true
